@model Cinema.Infrastructure.Entities.Pricecategory

@{
    ViewData["Title"] = "Додати категорію";
}

<div class="container mt-4">
    <h2>Створити категорію</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Назва категорії</label>
                    <input asp-for="Name" class="form-control" placeholder="Студентський, Дитячий..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Зберегти</button>
                    <a asp-action="Index" class="btn btn-secondary">Назад</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
