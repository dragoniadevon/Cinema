@model Cinema.Infrastructure.Entities.Hall

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Cinemas" asp-action="Index">Кінотеатри</a></li>
            <li class="breadcrumb-item active">Схема залу: @Model.Name</li>
        </ol>
    </nav>

    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Екран</h3>
        </div>
        <div class="card-body bg-light">
            <div class="d-flex flex-column align-items-center">
                @* Групуємо місця за номерами рядів *@
                @foreach (var rowGroup in Model.Seats.OrderBy(s => s.Rownumber).GroupBy(s => s.Rownumber))
                {
                    <div class="d-flex mb-2 align-items-center">
                        <strong class="me-3">Ряд @rowGroup.Key</strong>
                        @foreach (var seat in rowGroup.OrderBy(s => s.Seatnumber))
                        {
                            @* Якщо Halltype == 2 (VIP), робимо крісла золотистими, інакше сірими *@
                            var seatColor = Model.Halltype == 2 ? "#ffc107" : "#6c757d"; 
    
                            <div class="text-center m-1 shadow-sm" 
                                 style="width: 35px; height: 35px; background-color: @seatColor; color: white; border-radius: 5px; font-size: 0.8rem; line-height: 35px; cursor: default;"
                                 title="Ряд: @seat.Rownumber, Місце: @seat.Seatnumber">
                                @seat.Seatnumber
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
        <div class="card-footer text-muted">
            Всього місць у залі: @(Model.Rows * Model.Seatsperrow)
        </div>
        <div class="mt-3">
            <span class="badge" style="background-color: #6c757d;">&nbsp;</span> Стандартне місце
            <span class="badge ms-3" style="background-color: #ffc107;">&nbsp;</span> VIP місце
        </div>
    </div>
</div>