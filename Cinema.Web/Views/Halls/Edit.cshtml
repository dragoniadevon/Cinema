@model Cinema.Infrastructure.Entities.Hall

@{
    ViewData["Title"] = "✏️ Редагувати зал";
}

<h1 class="mb-4">✏️ Редагувати зал: @Model.Name</h1>

<div class="alert alert-warning shadow-sm mb-4">
    <i class="bi bi-exclamation-triangle-fill"></i> 
    <strong>Увага!</strong> Зміна кількості рядів або місць призведе до повної перегенерації схеми залу.
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Cinemaid" />
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Назва залу</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Halltype" class="form-label">Тип комфорту</label>
                    <select asp-for="Halltype" class="form-select">
                        <option value="1">Стандарт</option>
                        <option value="2">VIP</option>
                        <option value="3">Основний</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label asp-for="Rows" class="form-label">Кількість рядів</label>
                    <input asp-for="Rows" type="number" class="form-control" />
                    <span asp-validation-for="Rows" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Seatsperrow" class="form-label">Місць у ряду</label>
                    <input asp-for="Seatsperrow" type="number" class="form-control" />
                    <span asp-validation-for="Seatsperrow" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Зберегти та перегенерувати</button>
                <a asp-controller="Cinemas" asp-action="Index" class="btn btn-outline-secondary">Скасувати</a>
            </div>
        </form>
    </div>
</div>