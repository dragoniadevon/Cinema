@model Cinema.Infrastructure.Entities.Hall

<h2>Створити новий зал</h2>

<form asp-action="Create">
    <input type="hidden" asp-for="Cinemaid" value="@ViewBag.CinemaId" />
    
    <div class="form-group">
        <label>Назва залу</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Тип комфорту залу</label>
        <select asp-for="Halltype" class="form-control">
            <option value="1">Стандарт (Звичайний)</option>
            <option value="2">VIP (Підвищений комфорт)</option>
            <option value="3">Основний (Великий зал)</option>
        </select>
    </div>

    <div class="form-group">
        <label>Кількість рядів</label>
        <input asp-for="Rows" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label>Місць у ряду</label>
        <input asp-for="Seatsperrow" type="number" class="form-control" />
    </div>

    <div class="mt-3">
    <button type="submit" class="btn btn-primary">Створити та згенерувати місця</button>
    <a asp-controller="Cinemas" asp-action="Index" class="btn btn-secondary">Скасувати</a>
</div>

</form>