@model Cinema.Infrastructure.Entities.Movie

<h1>Додати фільм</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div>
        <label>Назва</label><br />
        <input asp-for="Title" />
        <span asp-validation-for="Title" style="color:red"></span>
    </div>

    <div>
        <label>Опис</label><br />
        <textarea asp-for="Description"></textarea>
    </div>

    <div>
        <label>Тривалість (хв)</label><br />
        <input asp-for="Duration" type="number" />
        <span asp-validation-for="Duration" style="color:red"></span>
    </div>

    <div>
        <label>Рейтинг</label><br />
        <input asp-for="Rating" step="0.1" />
    </div>

    <hr />
    <h3>Жанри</h3>

    @if (ViewBag.Genres != null)
    {
        foreach (var genre in ViewBag.Genres)
        {
            <div>
                <input type="checkbox" name="selectedGenres" value="@genre.Id" />
                <label>@genre.Name</label>
            </div>
        }
    }

    <br />
    <button type="submit">Зберегти</button>
</form>

